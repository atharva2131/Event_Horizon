{
	"compilerOptions": {
	  "target": "es2022",      // You want ES2022 as the target, which is fine.
	  "module": "esnext",      // Use `esnext` for better module handling (Optional, depending on your project needs)
	  "esModuleInterop": true, // Ensure compatibility with CommonJS modules (Optional, but often useful)
	  "strict": true           // Enable strict mode for better type checking (Optional but recommended)
	},
	"exclude": [
	  "coverage",             // Exclude coverage directory (for code coverage tools)
	  "test/list-exports"     // Exclude a specific test file
	]
  }
  